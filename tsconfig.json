{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@middleware/*": ["middleware/*"],
      "@database/*": ["database/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
